<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xTablayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:xTabIndicatorColor="@color/theme"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="12dp"
        app:xTabMaxWidth="200dp"
        app:xTabMinWidth="20dp"
        app:xTabMode="fixed"
        app:xTabPaddingEnd="4dp"
        app:xTabPaddingStart="20dp"
        app:xTabSelectedTextColor="@color/theme"
        app:xTabSelectedTextSize="16sp"
        app:xTabTextColor="@color/color_999999"
        app:xTabTextSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>